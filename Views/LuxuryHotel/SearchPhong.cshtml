<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg_1" style="background-image: url('../../images/banner/bradcam2.png');">
    <h3>BEDROOMS OF LUXURY HOTEL</h3>
</div>
<!-- bradcam_area_end -->
<!-- offers_area_start -->
<div class="offers_area padding_top">
    <div class="container">
        @using (Html.BeginForm("SearchPhong", "LuxuryHotel", FormMethod.Get))
        {
            <div class="row">
                <div class="col-xl-12">
                    <div class="section_title text-center mb-100">
                        <span>Our Offers</span>
                        <h3>Ongoing Offers</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                @if (Model != null)
                {
                    foreach (var room in Model)
                    {
                        <div class="col-xl-4 col-md-4">
                            <div class="single_offers">
                                <div class="about_thumb">
                                    <img src="~/sources/images/room-2.jpg" alt="" />
                                </div>
                                <h3>
                                    @room.RoomName
                                    <br>
                                    @room.ROOMTYPE.TypeName
                                </h3>
                                <ul>
                                    <li>@room.Area</li>
                                    <li>Price Per Hour: @Html.FormatValue(room.ROOMTYPE.PricePerHour, "{0:#,##0}") USD</li>
                                    <li>Price By Day: @Html.FormatValue(room.ROOMTYPE.PriceByDay, "{0:#,##0}") USD</li>
                                    <li>Over Night Price: @Html.FormatValue(room.ROOMTYPE.OverNightPrice, "{0:#,##0}") USD</li>
                                    <li>Price First Hour: @Html.FormatValue(room.ROOMTYPE.PriceFirstHour, "{0:#,##0}") USD</li>
                                    <li>Over Time Price: @Html.FormatValue(room.ROOMTYPE.PriceOverTime, "{0:#,##0}") USD</li>

                                </ul>
                                <a href="@Url.Action("AddRoom","BookRoom", new { ms = room.RoomID, url = Request.Url.ToString() })" class="book_now">Book now</a>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>
</div>
<!-- offers_area_end -->
