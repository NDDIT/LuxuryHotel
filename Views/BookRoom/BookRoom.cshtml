@using LuxuryHotel.Models
@model List<BookRoom>
@{
    ViewBag.Title = "GioHang";
    Layout = null;
}

<h2 style="text-align:center;">THÔNG TIN PHÒNG</h2>
<table align="center" border="1">
    <tr style="background-color:skyblue; font-size:15px; font-weight:bold; text-align:center;">
        <td>ID</td>
        <td>NAME</td>
        <td>TYPE</td>
        <td>AREA</td>
        <td>NUMBER OF ROOMS</td>
        <td>OVER NIGHT</td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td align="center">@item.iRoomID</td>
            <td>@item.sRoomName</td>
            <td>@item.sRoomType</td>
            <td>@item.sArea</td>

            @using (Html.BeginForm("UpdateRoom", "BookRoom", new { iRoomID = item.iRoomID }))
            {
                <td>

                    <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:#f4ff94" />

                </td>


                <td align="center">@string.Format("{0:#,##0,0}", @item.dOverNightPrice)</td>
                <td>
                    @Html.ActionLink("DELETE", "DeleteRoom", new
                    {
                        iRoomID = item.iRoomID
            })
                </td>
                <td>
                    <input type="submit" value="Cập nhật" />
                </td>
            }
        </tr>
    }
    <tr>
        <td colspan="5"></td>
        <td colspan="1" style="text-align: left; color: red; font-weight: bold; padding-right: 5px;">
            TOTAL OF ROOM: @string.Format("{0:#,##0,0}", ViewBag.TongSoLuong)
        </td>
        <td colspan="3" style="text-align: left; color: red; font-weight: bold;">
            TOTAL OF MONEY: @string.Format("{0:#,##0,0}", ViewBag.TongTien) VNĐ
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right;">
        <td colspan="9">
            @Html.ActionLink("DELETE A ROOM", "DeleteBooking")
        </td>
    </tr>
    <tr style="font-weight:bold; color: blue; text-align:center;">
        <td colspan="9">@Html.ActionLink("BOOK NOW", "BookingRoom", "BookRoom")</td>
    </tr>
</table>
