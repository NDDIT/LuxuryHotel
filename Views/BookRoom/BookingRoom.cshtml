@using LuxuryHotel.Models

@{
    ViewBag.Title = "ĐẶT PHÒNG";
    Layout = null;
}


<h2 style="text-align:center">THÔNG  TIN DẶT PHÒNG</h2>
<table align="center" border="1">
    <tr style="text-align:center;  font-weight:bold;">
        <td>ID</td>
        <td>NAME</td>
        <td>NUMBER OF ROOM</td>
        <td>OVER NIGHT PRICE</td>

    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;  font-weight:bold;">
            <td align="center">@item.iRoomID</td>
            <td>@item.sRoomName</td>
            @using (Html.BeginForm("UpdateRoom", "BookRoom", new
            {
                iRoomID = item.iRoomID
            }))
            {
                <td align="center">
                    @item.iSoLuong
                </td>
                <td align="center">@string.Format("{0:#,##0,0}", @item.dOverNightPrice)</td>
            }

        </tr>
    }
    <tr>
    <tr>
        <td colspan="3" style="text-align:right;  color:red;  font-weight:bold;  padding-right:5px;">
            TOTAL OF ROOM:  @string.Format("{0:#,##0}", @ViewBag.TongSoLuong)
        </td>
        <td colspan="3" style="text-align:center;  color:red;  font-weight:bold;">
            TOTAL OF MONEY:  @string.Format("{0:#,##0,0}", @ViewBag.TongTien)  VNĐ
        </td>
    </tr>
    <tr style="font-weight:bold;  color:blue;  text-align:right;">
        <td colspan="9">
            @Html.ActionLink("BACK TO LIST", "BookRoom", "BookRoom")
        </td>
    </tr>
</table>

<h2 style="text-align:center">THÔNG  TIN  ĐẶT  HÀNG</h2> @{
    CUSTOMER kh = (CUSTOMER)Session["User"];
}
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px;">
            <td>Full Name:</td>
            <td style="font-weight:bold">@kh.FullName</td>
        </tr>
        <tr style="height:40px;">
            <td>Email:</td>
            <td style="font-weight:bold">@kh.Email</td>
        </tr>
        <tr style="height:40px;">
            <td>Phonenumber:</td>
            <td style="font-weight:bold">@kh.PhoneNumber</td>
        </tr>
        <tr style="height:40px;">
            <td>Check In:</td>
            <td style="font-weight:bold">
                <input type="date" name="CheckInDate" />
            </td>
        </tr>
        <tr style="height:40px;">
            <td>Check Out:</td>
            <td style="font-weight:bold">
                <input type="date" name="CheckOutDate" />
            </td>
        </tr>
        <tr style="height:40px;">
            <td></td>
            <td>
                <input type="submit" value="BOOK NOW" />
            </td>
        </tr>
    }
</table>

