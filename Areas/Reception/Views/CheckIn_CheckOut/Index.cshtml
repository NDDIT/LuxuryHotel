@section customStyles {
    <style>
        #Checkin-Checkout-Container {
            width: 100%;
            position: relative;
            min-height:1200px;
        }
        #checkOutForm{
            width: 28%;
            position:absolute;
            right:0;
            top:0;
        }
        #Checkin-Checkout-Container #item {
